<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.numberoneproject.presentation.view.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_aroundShelterDetailFragment"
            app:destination="@id/aroundShelterDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/newsFragment"
        android:name="com.example.numberoneproject.presentation.view.news.NewsFragment"
        android:label="NewsFragment" />
    <fragment
        android:id="@+id/fundingFragment"
        android:name="com.example.numberoneproject.presentation.view.funding.FundingFragment"
        android:label="FundingFragment"
        tools:layout="@layout/fragment_funding">
        <action
            android:id="@+id/action_fundingFragment_to_fundingDetailFragment"
            app:destination="@id/fundingDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/mypageFragment"
        android:name="com.example.numberoneproject.presentation.view.mypage.MypageFragment"
        android:label="MypageFragment" />
    <fragment
        android:id="@+id/fundingDetailFragment"
        android:name="com.example.numberoneproject.presentation.view.funding.FundingDetailFragment"
        android:label="FundingDetailFragment"
        tools:layout="@layout/fragment_funding_detail"/>
    <fragment
        android:id="@+id/aroundShelterDetailFragment"
        android:name="com.example.numberoneproject.presentation.view.home.AroundShelterDetailFragment"
        android:label="AroundShelterDetailFragment"
        tools:layout="@layout/fragment_around_shelter_detail">
        <argument
            android:name="latitude"
            app:argType="float" />
        <argument
            android:name="longitude"
            app:argType="float" />
        <argument
            android:name="address"
            app:argType="string" />
    </fragment>

</navigation>