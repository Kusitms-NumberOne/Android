<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".presentation.view.networkerror.NetworkDialogFragment"
    android:orientation="vertical"
    android:background="@drawable/bg_radius_4">


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:lottie_rawRes="@raw/loading"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/error_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/네트워크_상태_불안정"
        android:textAlignment="center"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal"
        style="@style/subtitle2"
        android:textColor="@color/secondary_900"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="28dp"
        android:weightSum="2"
        android:gravity="center">

        <TextView
            android:id="@+id/action_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/행동요령"
            style="@style/button"
            android:textColor="@color/secondary_900"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:gravity="center"
            android:background="@color/secondary_50"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/secondary_100"/>
        <TextView
            android:id="@+id/shelter_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/대피소_조회"
            style="@style/button"
            android:textColor="@color/secondary_900"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:gravity="center"
            android:background="@color/secondary_50"/>

    </LinearLayout>


</LinearLayout>
</layout>