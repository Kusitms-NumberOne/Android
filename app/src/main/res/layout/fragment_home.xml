<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp"
                android:paddingStart="20dp"
                android:paddingEnd="16dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_main"
                    app:tint="@color/secondary_200"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_alarm"
                    app:tint="@color/secondary_200"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_bottom_left_right_radius_8"
                android:backgroundTint="@color/orange_50"
                android:paddingVertical="24dp"
                android:paddingHorizontal="20dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/orange_500"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0dp"
                        android:layout_marginRight="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/button"
                            android:textColor="@color/orange_50"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginVertical="6dp"
                            android:text="화재"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_radius_4"
                        android:backgroundTint="@color/white"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/button"
                            android:textColor="@color/orange_500"
                            android:layout_marginEnd="8dp"
                            android:text="심각도"/>
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="26dp"
                            android:layout_height="10dp"
                            android:layout_marginEnd="4dp"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="@color/orange_500"
                            app:cardCornerRadius="1dp"/>
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="26dp"
                            android:layout_height="10dp"
                            android:layout_marginEnd="4dp"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="@color/secondary_50"
                            app:cardCornerRadius="1dp"/>
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="26dp"
                            android:layout_height="10dp"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="@color/secondary_50"
                            app:cardCornerRadius="1dp"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_refresh_and_text"
                        app:tint="@color/secondary_300"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/headline5"
                    android:textColor="@color/secondary_800"
                    android:text="서울특별시 강남구 동작동 화재발생"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/body2"
                    android:textColor="@color/secondary_400"
                    android:text="금일 10.23. 19:39경 소촌동 855 화재 발생, 인근주민은 안전유의 및 차량우회바랍니다. 960-8222"
                    android:layout_marginTop="10dp"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_location"
                        app:tint="@color/secondary_300"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/caption"
                        android:textColor="@color/secondary_300"
                        android:text="서울특별시 강남구"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_dot"
                        app:tint="@color/secondary_300"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/caption"
                        android:textColor="@color/secondary_300"
                        android:text="오후 2시 46분"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:padding="16dp"
                    android:background="@drawable/bg_radius_8"
                    android:backgroundTint="@color/white">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/subtitle1"
                            android:textColor="@color/secondary_500"
                            android:text="화재 행동요령 체크리스트"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/caption"
                            android:textColor="@color/secondary_200"
                            android:text="모두보기"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/cg_check_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            app:singleSelection="true"
                            app:singleLine="true"
                            app:chipSpacingHorizontal="7dp">
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_check_list_1"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="6dp"
                                app:chipStrokeColor="@color/chip_check_stoke"
                                app:chipStrokeWidth="1dp"
                                app:chipBackgroundColor="@color/chip_check_bg"
                                android:textColor="@color/chip_check_text"
                                app:chipCornerRadius="48dp"
                                app:chipMinTouchTargetSize="0dp"
                                android:checked="true"
                                android:text="실내"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_check_list_2"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="6dp"
                                app:chipStrokeColor="@color/chip_check_stoke"
                                app:chipStrokeWidth="1dp"
                                app:chipBackgroundColor="@color/chip_check_bg"
                                android:textColor="@color/chip_check_text"
                                app:chipMinTouchTargetSize="0dp"
                                app:chipCornerRadius="48dp"
                                android:text="실외"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_check_list_3"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="6dp"
                                app:chipStrokeColor="@color/chip_check_stoke"
                                app:chipStrokeWidth="1dp"
                                app:chipBackgroundColor="@color/chip_check_bg"
                                android:textColor="@color/chip_check_text"
                                app:chipMinTouchTargetSize="0dp"
                                app:chipCornerRadius="48dp"
                                android:text="기타"/>
                        </com.google.android.material.chip.ChipGroup>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="흐으으음"/>

                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="24dp"
                android:paddingHorizontal="20dp"
                android:background="@drawable/bg_radius_8"
                android:backgroundTint="@color/white">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/headline6"
                        android:textColor="@color/secondary_800"
                        android:text="주변 대피소"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/caption"
                        android:textColor="@color/secondary_200"
                        android:text="모두보기"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/cg_around_shelter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:singleSelection="true"
                        app:singleLine="true"
                        app:chipSpacingHorizontal="7dp">
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_around_shelter_1"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="6dp"
                            app:chipStrokeColor="@color/chip_check_stoke"
                            app:chipStrokeWidth="1dp"
                            app:chipBackgroundColor="@color/chip_check_bg"
                            android:textColor="@color/chip_check_text"
                            app:chipCornerRadius="48dp"
                            app:chipMinTouchTargetSize="0dp"
                            android:checked="true"
                            android:text="지진"/>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_around_shelter_2"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="6dp"
                            app:chipStrokeColor="@color/chip_check_stoke"
                            app:chipStrokeWidth="1dp"
                            app:chipBackgroundColor="@color/chip_check_bg"
                            android:textColor="@color/chip_check_text"
                            app:chipMinTouchTargetSize="0dp"
                            app:chipCornerRadius="48dp"
                            android:text="수해"/>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_around_shelter_3"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="6dp"
                            app:chipStrokeColor="@color/chip_check_stoke"
                            app:chipStrokeWidth="1dp"
                            app:chipBackgroundColor="@color/chip_check_bg"
                            android:textColor="@color/chip_check_text"
                            app:chipMinTouchTargetSize="0dp"
                            app:chipCornerRadius="48dp"
                            android:text="전쟁"/>
                    </com.google.android.material.chip.ChipGroup>

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/vp_shelter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:clipToPadding="false"
                        android:clipChildren="false" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/btn_naver_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="네맵"
                android:visibility="invisible"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/btn_kakao_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="카맵"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/btn_t_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="티맵"
                android:layout_marginTop="24dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>
</layout>