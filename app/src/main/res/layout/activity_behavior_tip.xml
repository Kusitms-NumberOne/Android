<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".presentation.view.networkerror.BehaveTipFragment"
android:orientation="vertical">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_arrow_left"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:layout_marginStart="20dp"/>


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/subtitle1"
        android:layout_weight="1"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:text="@string/행동요령" />

</androidx.constraintlayout.widget.ConstraintLayout>
<com.google.android.material.tabs.TabLayout
    android:id="@+id/tabLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:tabRippleColor="@android:color/transparent"
    app:tabSelectedTextColor="@color/secondary_900"
    app:tabTextColor="@color/secondary_200"
    app:tabIndicatorColor="@color/secondary_800"
    app:tabIndicatorHeight="2dp"
    app:tabGravity="fill"
    app:tabIndicatorFullWidth="true">

    <com.google.android.material.tabs.TabItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/비상대비"
        android:stateListAnimator="@null"
        style="@style/button"/>
    <com.google.android.material.tabs.TabItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/자연재난"
        style="@style/button"
        android:stateListAnimator="@null"/>
    <com.google.android.material.tabs.TabItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/기타"
        style="@style/button"
        android:stateListAnimator="@null"/>

</com.google.android.material.tabs.TabLayout>

<androidx.fragment.app.FragmentContainerView
    android:id="@+id/fragmentContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

</LinearLayout>
</layout>